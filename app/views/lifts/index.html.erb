<p id="notice"><%= notice %></p>

<h1>Listing Lifts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Userid</th>
      <th>Weight</th>
      <th>Rep</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lifts.each do |lift| %>
      <tr>
        <td><%= lift.name %></td>
        <td><%= lift.user_id %></td>
        <td><%= lift.weight %></td>
        <td><%= lift.rep %></td>
        <td><%= lift.lift_type %></td>
        <td><%= link_to 'Show', lift %></td>
        <td><%= link_to 'Edit', edit_lift_path(lift) %></td>
        <td><%= link_to 'Destroy', lift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

